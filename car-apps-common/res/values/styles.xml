<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The styling for Toolbar used as action bar. -->
    <style name="Widget.CarDefault.Toolbar" parent="android:Widget.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentInsetEnd">@dimen/car_keyline_1</item>
        <item name="android:contentInsetStart">@dimen/car_keyline_1</item>
        <item name="android:elevation">@dimen/control_bar_elevation</item>
        <item name="android:subtitleTextAppearance">@style/TextAppearance.Car.Body3.Light</item>
        <item name="android:titleTextAppearance">@style/TextAppearance.Car.Body1.Medium.Light</item>
        <item name="android:navigationIcon">@drawable/ic_nav_arrow_back</item>
    </style>

    <!-- The styling for the navigation button in action bar. -->
    <style name="Widget.CarDefault.Toolbar.Button.Navigation"
        parent="android:Widget.Toolbar.Button.Navigation">
        <item name="android:background">@drawable/car_card_ripple_background</item>
        <item name="android:scaleType">center</item>
        <item name="android:tint">@color/icon_tint</item>
    </style>

    <!-- The style for the menu bar (i.e. hamburger) and back arrow in the navigation drawer. -->
    <style name="Widget.CarDefault.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/car_title2_light</item>
        <item name="spinBars">true</item>
        <item name="barLength">@dimen/car_menu_bar_length</item>
        <item name="thickness">@dimen/car_arrow_thickness</item>
        <item name="gapBetweenBars">@dimen/car_menu_bar_spacing</item>
        <item name="arrowShaftLength">@dimen/car_arrow_shaft_length</item>
        <item name="arrowHeadLength">@dimen/car_arrow_head_length</item>
        <item name="drawableSize">@dimen/car_arrow_size</item>
    </style>

    <!-- ================ -->
    <!-- ActionBar Themes -->
    <!-- ================ -->
    <eat-comment />

    <!-- Styles for action buttons -->
    <style name="Widget.ActionButton" parent="android:Widget.DeviceDefault.Button">
        <!-- Force the vector drawables to the right size. -->
        <item name="android:layout_width">@dimen/control_bar_button_size</item>
        <item name="android:layout_height">@dimen/control_bar_button_size</item>
        <item name="android:padding">@dimen/control_button_padding</item>
        <!-- Note: fitCenter makes icons disappear if the view is too small... -->
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/icon_tint</item>
    </style>

    <!-- Styles for car tab view -->
    <style name="CarTabItemText">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/car_tab_item_selector</item>
    </style>

</resources>
